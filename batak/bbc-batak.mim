(input-method bcc toba)

(description "Batak Toba input method with Latin keyboard layout")

(title "ᯅᯖᯂ᯲ ᯖᯬᯅ")

(map
	(starter
 		("a") ("b") ("c") ("d") ("e") ("f") ("g") ("h") ("i")
		("j") ("k") ("l") ("m") ("n") ("o") ("p") ("r")	("s") 
		("t") ("u") ("v") ("w") ("y") ("A") ("I") ("G")	("H") 
		("J") ("N") ("U") ("W") ("[") (";") ("!") ("@")	("#") 
		("$")
		)	

	(trans
		("k" "ᯂ")
		("g" "ᯎ")
		("G" "ᯝ")
		("c" "ᯡ")
		("j" "ᯐ")
		("J" "ᯠ")
		("t" "ᯖ")
		("T" "ᯗ")
		("d" "ᯑ")
		("n" "ᯉ")
		("p" "ᯇ")
		("b" "ᯅ")
		("m" "ᯔ")
		("y" "ᯛ")
		("r" "ᯒ")
		("l" "ᯞ")
		("w" "ᯋ")
		("W" "ᯍ")
		("s" "ᯘ")
		("h" "ᯂ")
		("A" "ᯀ")
		("I" "ᯤ")
		("U" "ᯥ")
		("i" "ᯪ")
		("u" "ᯮ")
		("[" "ᯩ")
		("o" "ᯬ")
		("N" "ᯰ")
		("H" "ᯱ")
		(";" "᯳")
		("!" "᯼")
		("@" "᯽")
		("#" "᯾")
		("$" "᯿")
	)
	(return
		((Return)))
	(backspace
		((BackSpace) (undo)))
)

(state
  (init
    (trans)))
